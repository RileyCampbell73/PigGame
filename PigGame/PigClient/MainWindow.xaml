                <Label Content="Banked: " HorizontalAlignment="Left" Width="53" Margin="0,25,0,16"/>
            </Grid>
        </GroupBox>

        <Button x:Name="buttonRoll" Content="Roll" HorizontalAlignment="Left" Margin="187,303,0,0" VerticalAlignment="Top" Width="109" Height="37" IsEnabled="False" Click="buttonRoll_Click"/>

        <Button x:Name="buttonStay" Content="Stay" HorizontalAlignment="Left" Margin="340,303,0,0" VerticalAlignment="Top" Width="110" Height="37" IsEnabled="False" Click="buttonStay_Click"/>

        <GroupBox Header="Game Log" HorizontalAlignment="Left" Margin="187,358,0,0" VerticalAlignment="Top" Height="102" Width="263">
            <ScrollViewer x:Name="scrollViewer">
                <TextBox x:Name="textBoxLog" />
            </ScrollViewer>
        </GroupBox>

        <CheckBox x:Name="checkBoxReady" Content="Ready to start?" HorizontalAlignment="Left" Margin="468,306,0,0" VerticalAlignment="Top" Checked="checkBoxReady_Checked" Unchecked="checkBoxReady_Unchecked"/>

    </Grid>
</Window>
