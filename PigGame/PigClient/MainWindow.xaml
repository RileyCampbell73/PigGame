<Window x:Class="PigClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pig Game!" Height="500" Width="630" Closing="Window_Closing">
    <Grid>
        <Image x:Name="imgDie" HorizontalAlignment="Left" Height="100" Margin="268,152,0,0" VerticalAlignment="Top" Width="100"/>

        <GroupBox x:Name="groupBoxPlayer1" Header="Player 1" HorizontalAlignment="Left" Margin="26,201,0,0" VerticalAlignment="Top" Height="103" Width="141">
