                <TextBox x:Name="textBoxPlayerPoints2" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61" Margin="58,3,0,0" IsEnabled="False"/>
                <Label Content="Current: " HorizontalAlignment="Left" Width="53" Margin="0,0,0,44"/>
                <TextBox x:Name="textBoxPlayerTotal2" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61" Margin="58,25,0,0" IsEnabled="False"/>
                <Label Content="Banked: " HorizontalAlignment="Left" Width="53" Margin="0,25,0,16"/>
