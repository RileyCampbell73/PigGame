                <TextBox x:Name="textBoxPlayerPoints1" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61" Margin="58,3,0,0" IsEnabled="False"/>
                <Label Content="Current: " HorizontalAlignment="Left" Width="53" Margin="0,0,0,44"/>
                <TextBox x:Name="textBoxPlayerTotal1" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61" Margin="58,25,0,0" IsEnabled="False"/>
                <Label Content="Banked: " HorizontalAlignment="Left" Width="53" Margin="0,25,0,16"/>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="groupBoxPlayer2" Header="Player 2" HorizontalAlignment="Left" Margin="26,93,0,0" VerticalAlignment="Top" Height="103" Width="140">
