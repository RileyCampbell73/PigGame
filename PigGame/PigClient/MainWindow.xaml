                <Label Content="Current: " HorizontalAlignment="Left" Width="53" Margin="0,0,0,44"/>
                <TextBox x:Name="textBoxPlayerTotal4" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61" Margin="58,25,0,0" IsEnabled="False"/>
                <Label Content="Banked: " HorizontalAlignment="Left" Width="53" Margin="0,25,0,16"/>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="groupBoxPlayer5" Header="Player 5" HorizontalAlignment="Left" Margin="468,96,0,0" VerticalAlignment="Top" Height="102" Width="142">
            <Grid Margin="0,10,0,2">
                <TextBox x:Name="textBoxPlayerPoints5" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61" Margin="58,3,0,0" IsEnabled="False"/>
